import groovy.transform.Field
@Field def myvar = "ACCOUNT_ID"

def myprint() {
    sh "echo ${myvar}"
}

pipeline {
  agent any
  stages {
    stage("build") {
      steps {
        script { myprint() }
      }
    }
    stage("condition") {
      when {
        myvar 'ACCOUNT_ID'
      }
      steps {
        println 'condition is true'
      }
    }
  }
  post {
    success {
      println 'success'
    }
    aborted {
      println 'aborted'
    }
    failure {
      println 'failure'
    }
  }
}
